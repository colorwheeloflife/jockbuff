<div class="container-fluid topfix container-space">
  <div class="row">
    <div class="col-md-1">
      <%= image_tag "#{@team.image}" , :class => 'teamlogo' %>
    </div>
      <div class="col-md-4">
        <h1><%= @team.name %></h1>
        <table class="table table-bordered table-striped table-hover table-responsive">
          <h3>Team Needs</h3>
          <thead>
            <tr>
            <th>#</th>
            <th>Category</th>
            <th>Best FA Available</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Goals</td>
              <td>Dingo Burns</td>
            </tr>
            <tr>
              <td>2</td>
              <td>Hits</td>
              <td>Meathead Mauler</td>
            </tr>
            <tr>
              <td>3</td>
              <td>PPP</td>
              <td>Joey Powerplay</td>
            </tr>
            <tr>
              <td>4</td>
              <td>+/-</td>
              <td>Otto Adder</td>
            </tr>
            <tr>
              <td>5</td>
              <td>A</td>
              <td>Dan Playmaker</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-md-7">
        <div id="spider_graph" class="col-md-6 graph" style="width:100%; height:500px;">
          If You See This The Graph Had An Error
        </div>
      </div>
    </div>
  </div>

<!--Team Info -->
<div class="container-fluid container-space">
  <div class="row">
    <div class="col-md-6">
      <h1><%= @team.name %> Roster</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered table-striped table-hover table-responsive">
        <thead>
          <tr>
            <th>Players</th>
            <th>Pro Team</th>
            <th>Position</th>
            <th>G</th>
            <th>A</th>
            <th>Points</th>
            <th>PPP</th>
            <th>+/-</th>
            <th>PIMS</th>
            <th>SOG</th>
            <th>HITS</th>
            <th>BLKS</th>
            <th>JBR</th>
          </tr>
        </thead>
        <tbody>
          <% @players.each do |player_passport| %>
          <% next if player_passport.player.positions.join("/").include?("G") %>
            <tr>
              <td><%= player_passport.player.name %></td>
              <td><%= player_passport.player.pro_team %></td>
              <td><%= player_passport.player.positions.join("/") %>
              </td>
              <td><%= player_passport.player.player_prediction.g %></td>
              <td><%= player_passport.player.player_prediction.a %></td>
              <td><%= player_passport.player.player_prediction.p %></td>
              <td><%= player_passport.player.player_prediction.ppp %></td>
              <td><%= player_passport.player.player_prediction.plusminus %></td>
              <td><%= player_passport.player.player_prediction.pim %></td>
              <td><%= player_passport.player.player_prediction.sog %></td>
              <td><%= player_passport.player.player_prediction.hit %></td>
              <td><%= player_passport.player.player_prediction.blk %></td>
              <td>150</td>
            </tr>
          <% end %>
        </tbody>
        </table>
     </div>
     </div>
<div class="row">
    <div class="col-md-12">
      <table class="table table-bordered table-striped table-hover table-responsive">
        <thead>
          <tr>
            <th>Goalies</th>
            <th>Team</th>
            <th>Wins</th>
            <th>Loses</th>
            <th>GAA</th>
            <th>SV %</th>
            <th>SO</th>
            <th>Saves</th>
            <th>JBR</th>
          </tr>
        </thead>
        <tbody>
        <% @players.each do |player_passport| %>
        <% next if player_passport.player.positions.join("/").exclude?("G") %>
          <tr>
            <td><%= player_passport.player.name %></td>
            <td><%= player_passport.player.pro_team %></td>
            <td><%= player_passport.player.player_prediction.w %></td>
            <td><%= player_passport.player.player_prediction.l %></td>
            <td><%= player_passport.player.player_prediction.gaa %></td>
            <td><%= player_passport.player.player_prediction.svpercent %></td>
            <td><%= player_passport.player.player_prediction.sho %></td>
            <td><%= player_passport.player.player_prediction.sv %></td>
            <td>100</td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
