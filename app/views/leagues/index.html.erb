<div class="row topfix">
  <div class="col-md-8">
    <h1 class="text-center">Your Fantasy Hockey Leagues</h1>
  </div>
  <div class="container-fluid">
    <div class="container">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>League Name</th>
            <th>Team Name</th>
          </tr>
        </thead>
        <tbody>
          <% @leagues.each do |league| %>
          <tr>
          <td>1</td>
          <td><%= league.name %></td>
          <td><%= league.user_team %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= form_tag(user_leagues_path(@current_user), method: "post") do %>
      <button type= "submit" class= "btn btn-primary btn-lg">
      Click to Update Your Teams
      </button>
      <% end %>
    </div>
  </div>
</div>